<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".presentation.services.ServiceChoice">

    <androidx.cardview.widget.CardView
            android:layout_marginTop="10sp"
            android:id="@+id/cvMaster"
            android:layout_marginHorizontal="10sp"
            app:cardElevation="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_margin="10sp"
                    android:layout_weight="0"
                    android:src="@drawable/barber"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Мастера"
                      android:layout_marginStart="20sp"
                      android:textSize="18sp"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:fontFamily="@font/poppins"
                      android:layout_gravity="center_vertical"/>
            <ImageView android:layout_width="30sp" android:layout_height="30sp"
                       android:src="@drawable/right"
                       android:layout_weight="0"
                       android:layout_marginEnd="20sp"
                       android:layout_gravity="center_vertical|start"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp"
            android:id="@+id/cvService"
            app:cardElevation="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_weight="0"
                    android:layout_margin="10sp"
                    android:src="@drawable/hairdres"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="услуги"
                      android:layout_marginStart="20sp"
                      android:textSize="18sp"
                      android:layout_weight="1"
                      android:textColor="@color/black"
                      android:fontFamily="@font/poppins"
                      android:layout_gravity="center_vertical"/>
            <ImageView android:layout_width="30sp" android:layout_height="30sp"
                       android:src="@drawable/right"
                       android:layout_weight="0"
                       android:layout_marginEnd="20sp"
                       android:layout_gravity="center_vertical|start"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>